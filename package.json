{
  "name": "wushan",
	"displayName": "wushan",
	"description": "Helper to quickly HuaweiCloud Service Broker development",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:wushan.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "wushan-codereivew",
					"title": "Wushan Code Review",
					"icon": "resources/g.png"
				}
			]

		},
		"views": {
			"wushan-codereivew":[
				{
					"id": "wushan-addcomment",
					"name": "Add Comments"
				},
				{
					"id": "wushan-all-comments",
					"name": "Comments"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "wushan-addcomment",
				"contents": "Add code review comments."
			}
		],
		"commands": [
			{
				"command": "wushan.helloWorld",
				"title": "Add Review Comments"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "wushan.helloWorld",
					"when": "editorHasSelection == true"
				}
			]

		}

	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.68.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"mocha": "^10.0.0",
		"typescript": "^4.7.2",
		"@vscode/test-electron": "^2.1.3"
	}
}
